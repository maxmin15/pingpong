#include <Servo.h>

Servo X2;
Servo X3;

char x;
long int v;

void setup() {
  X2.attach(2);
  X3.attach(3);
  Serial.begin(9600);
  X2.write(90);
  X3.write(90);
}

void loop() {
  if (Serial.available() > 2) {
    x = Serial.read();
    v = Serial.parseInt();
    if (x == 'a') {
      X2.write(v);
      X3.write(v);
    }
  }
}
